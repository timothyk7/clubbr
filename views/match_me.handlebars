<!doctype html>

<html>
<head>
	<title>Clubbr</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable = yes, maximum-scale=1.0">
	<link rel="icon" href="images/favicon.ico">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/clubbr.css" rel="stylesheet">
    <script type="text/javascript" src="/js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="/js/nav.js"></script>
	<script src="/js/match_game.js"></script>

	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

<!-- 	basic fixed navigation bar -->
    <nav class="navbar navbar-default navbar-fixed-top"> 
    	{{> navbar}}
    </nav>

	<!-- 	Meat of Match Me -->
	<div class="container-fluid club-container">
		<div class="row" id="matchmeMeat">
			<h2 id="club-title"></h2>

			<div class="club-img">
				<img class="img-responsive img-rounded" id="club-img" src=""></img>
		

				<h3 id="club-description"></h3>

				<p id="learn-more"></p>

			</div>

		</div>
	</div>

	<!-- commento -->

	<!-- buttons -->
	<div class="footer mid-align">
		<!-- show events button -->
		<div class="club-buttons">
			<button id="show-events-btn" class="club-buttons btn btn-primary btn-lg full-width-button">Show events</button>
		</div>

		<!-- yes/no star/x buttons -->
		<div class="club-buttons">
			<div class="col-xs-6 mid-align" style="padding-left: 0px;">
				<!-- <button id="yes-btn" class="club-buttons btn btn-primary btn-lg full-width-button">Yes</button> -->
				{{#if displayIcon}}
					<button type="button" class="btn btn-default btn-lg full-width-button" id="yes-btn" style="font-size: 30px;">
				  		<span class="glyphicon glyphicon-star-empty" aria-hidden="true" style="color: yellow;"></span> 
					</button>
				{{else}}
					<button type="button" class="btn btn-primary btn-lg full-width-button club-buttons" id="yes-btn" style="font-size: 30px;">
				  		yes
					</button>
				{{/if}}
			</div>

			<div class="col-xs-6 mid-align" style="padding-right: 0px;">
			   	{{#if displayIcon}}
					<button type="button" class="btn btn-default btn-lg full-width-button" id="no-btn" style="font-size: 30px;">
				  		<span class="glyphicon glyphicon-remove" aria-hidden="true" style="color: red;"></span> 
					</button>
				{{else}}
					<button type="button" class="btn btn-primary btn-lg full-width-button club-buttons" id="no-btn" style="font-size: 30px;">
				  		no
					</button>
				{{/if}}
			</div>
		</div>
	</div>

	<!-- Modal Popup Notifying reached end of club list-->
	<div class="modal fade" id="no-more-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="no-more-modal-label">You've reached the end!</h4>
	      </div>
	      <div class="modal-body" id="no-more-modal-body">
	      	You've cycled through all your matches! Want to edit your profile to get new matches, or start again?
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default" id="start-again-btn" data-dismiss="modal">Start Again</button>
	        <button type="button" class="btn btn-primary" id="no-more-modal-go-to-profile-btn">Go to Profile</button>
	      </div>
	    </div>
	  </div>
	</div>

	<!-- Modal Popup Notifying That you added to your interests-->
	<div class="modal fade" id="yes-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="yes-modal-label"></h4>
	      </div>
	      <div class="modal-body" id="yes-modal-body">
	      	Would you like to see your favorited clubs, or go back to matching?
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default" id="yes-modal-back-to-matching-btn" data-dismiss="modal">Back to matching</button>
	      	<button type="button" class="btn btn-primary" id="yes-modal-go-to-favorites-btn">Go to Favorites</button>
	      </div>
	    </div>
	  </div>
	</div>

	<!-- Modal Popup Showing upcoming events for the club-->
	<div class="modal fade" id="upcoming-events-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="upcoming-events-modal-label"></h4>
	      </div>
	      <div class="modal-body" id="upcoming-events-modal-body">
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-secondary-outline" data-dismiss="modal">OK</button>
	      </div>
	    </div>
	  </div>
	</div>

	{{> googleAnalytics}}
	
</body>
</html>