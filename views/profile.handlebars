</head>

<body>
	<nav class="navbar navbar-default navbar-fixed-top"> 
    	{{> navbar}}
    </nav>

	<div class="container-fluid profile-container">

		<!--profile picture and stuff -->
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 profileBlock">
	        <div class="content clearfix">
	            <h1 class="center">Create Profile</h1>
	                <div id="userphoto" class="center form-group">
	                    <img src="/images/wendy.jpeg" class = "profile-pic">
	                </div>
	                <div>

	                	<!--<label class="control-label" for="name"> <h2>Wendy Tang</h2></label> -->
	                	<div id ="profile-name">Wendy Tang </div>
	                	<button class="btn btn-secondary" id="editName">Edit Name</button>
	     	            <div id ="profile-email">example.ucsd.edu </div>
	                	<button class="btn btn-secondary" id="editEmail" >Edit email</button>
	                </div>

	                <div>
	                    <label class="control-label" for="Checkboxes">Interest(s):</label> 
	                    	<!-- making a simple list that have interests --> 
							 <ul id ='profile-interests' class ="profile-interests" style="list-style-type:none">
							</ul>  
	                </div>
	            </form>
	        </div><!-- @end #content -->
	      </div><!-- @end #w -->

	        <div class="col-xs-12 form-group">
                <span>
                	<button class="btn btn-primary" id="addInterest" >Add Interests</button> 
  
                </span>
            </div>


	<!-- Modal Popup for changing your Name-->
	<div class="modal fade" id="name-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      </div>
	      <div class="modal-body" id="name-modal-body">
	      	<input type="text" name="new-name" id="new-name">
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default" id="change-name" data-dismiss="modal">Change Name</button>
	      </div>
	    </div>
	  </div>
	</div>

	<!-- Modal Popup Notifying for changing email -->
	<div class="modal fade" id="email-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      </div>
	      <div class="modal-body" id="name-modal-body">
	      	<input type="text" name="new-email" id="new-email">
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default" id="change-email" data-dismiss="modal">Change Email</button>
	      </div>
	    </div>
	  </div>
	</div>

   <!-- Modal for Adding Interests-->
    <div class="modal fade" id="interests-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
   		<div class="modal-dialog" role="document">
     		<div class="modal-content">
        		<div class="modal-header">
          			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          			<h4 class="modal-title" id="myModalLabel">Interests</h4>
        		</div>
        		<div class="modal-body">
         			<div id="interest" class="row">
            			{{#each extra_interests}}
            				<div class="col-md-6 columns center" id="checkBoxInterestsModal"> 
                    			<label class="checkbox-inline" for="{{remove_space}}">
                    			<input type="checkbox" name="Checkboxes" id="{{remove_space}}" value="{{interest}}">
                        			{{interest}}
                    			</label> 
            				</div>
            			{{/each}}
          			</div>
        		</div>
        		<div class="modal-footer">
          			<button id="saveChanges" type="button" class="btn btn-primary" data-dismiss="modal">Add to Interest</button>
        		</div>
      		</div>
    	</div>
  </div>


</body>
</html>
