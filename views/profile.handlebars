<!doctype html>

<html>
<head>
	<title>ClubRoom</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable = yes, maximum-scale=1.0">
	<link rel="icon" href="images/favicon.ico">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/clubbr.css" rel="stylesheet">
	<link href="css/profile.css" rel="stylesheet">
    <script type="text/javascript" src="/js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="/js/nav.js"></script>
	<script src="/js/profile_edit.js"></script>
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<nav class="navbar navbar-default navbar-fixed-top"> 
    	{{> navbar}}
    </nav>

	<div class="container-fluid profile-container">

		<!--profile picture and stuff -->
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 profileBlock">
	        <div class="content clearfix">
	            <h1 class="center">My Profile</h1>
	                <div id="userphoto" class="center form-group">
	                    <img src="/images/avatar.png" class = "profile-pic">
	                </div>
	                <div>

	                	<!--<label class="control-label" for="name"> <h2>Wendy Tang</h2></label> -->
	                	<div id ="profile-name">
	                		<span id="pname">{{user.name}}</span>
	                		<button class="btn btn-xs" id="editName">Edit Name</button>
	                	</div>
	                	
	     	            <div id ="profile-email">
	     	            	<span id="pemail">{{user.email}}</span>
	     	            	<button class="btn btn-xs" id="editEmail" >Edit email</button>
	     	            </div>
	                </div>

	                <div>
	                    <label class="control-label" for="Checkboxes">Interest(s):</label> 
	                    	<!-- making a simple list that have interests --> 
							 <ul id ="profile-interests" class ="profile-interests" style="list-style-type:none">
							 	{{#each user.interests}}
							 		<li style="margin: 5px;">
							 			<span class="pinterest">{{interest}}</span>
							 			<button id="delete-button{{remove_space}}--{{id}}" class="btn btn-xs interests" style="margin-left: 10px;">Delete</button>
							 		</li>
							 	{{/each}}
							</ul>  
	                </div>
	                <div class="col-xs-12 form-group">
		                <span>
		                	<button class="btn btn-default" id="addInterest"  style="margin-bottom: 30px;">Add Interests</button> 
		  					<button class="btn btn-primary btn-lg center" id="saveChanges">Save Changes</button>
		                </span>
		            </div>
	            </form>
	        </div><!-- @end #content -->
	      </div><!-- @end #w -->




	<!-- Modal Popup for changing your Name-->
	<div class="modal fade" id="name-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      </div>
	      <div class="modal-body" id="name-modal-body">
	      	<input type="text" name="new-name" id="new-name" placeholder="New Name">
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default" id="change-name" data-dismiss="modal">Change Name</button>
	      </div>
	    </div>
	  </div>
	</div>

	<!-- Modal Popup Notifying for changing email -->
	<div class="modal fade" id="email-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      </div>
	      <div class="modal-body" id="name-modal-body">
	      	<input type="text" name="new-email" id="new-email" placeholder="New Email">
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default" id="change-email" data-dismiss="modal">Change Email</button>
	      </div>
	    </div>
	  </div>
	</div>

   <!-- Modal for Adding Interests-->
    <div class="modal fade" id="interests-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
   		<div class="modal-dialog" role="document">
     		<div class="modal-content">
        		<div class="modal-header">
          			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          			<h4 class="modal-title" id="myModalLabel">Interests</h4>
        		</div>
        		<div class="modal-body">
         			<div id="interest" class="row">
            			{{#each interests.interests}}
            					<div class="col-md-6 columns center"> 
                                        <label class="checkbox-inline">
                                          <input type="checkbox" name="Checkboxes" id="{{remove_space}}--{{id}}" value="{{interest}}">
                                          <label for="{{remove_space}}--{{id}}"> {{interest}} </label>
                                        </label> 
                                </div>
            			{{/each}}
          			</div>
        		</div>
        		<div class="modal-footer">
          			<button id="saveInterests" type="button" class="btn btn-primary" data-dismiss="modal">Add to Interest</button>
        		</div>
      		</div>
    	</div>
  </div>


</body>
</html>
