<!doctype html>

<html>
<head>
    <title>Clubbr</title>   
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable = yes, maximum-scale=1.0">
    <link rel="icon" href="images/favicon.ico">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="css/signup.css" rel="stylesheet">
    <script type="text/javascript" src="/js/jquery-1.11.0.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/signup.js"></script>
    <!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
    <div class="container-fluid">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 profileBlock">
            <div class="content clearfix">
                <h1 class="center">Create Profile</h1>
                    <div id="userphoto" class="center form-group">
                        <img src="/images/avatar.png" alt="default avatar">
                        <span class="btn btn-default btn-file">
                            Browse <input type="file">
                        </span>
                    </div>
                    <div>
                      <label class="control-label" for="name">Name:</label>
                      <input class="form-control" type="text" id="name" placeholder="Name" name="name">
                    </div>
                    <div >
                      <label class="control-label" for="email">Email:</label>
                      <input class="form-control" type="text" id="email" placeholder="Email" name="email">
                    </div>
                    <div>
                      <label class="control-label" for="password">Password:</label>
                      <input class="form-control" type="password" id="password" placeholder="Password" name="password">
                    </div>
                    <div>
                        <label class="control-label" for="Checkboxes">Select Interest(s):</label>  
                        <div id="interest" class="row">
                            {{#each interests}}
                            <div class="col-md-6 columns center" id="checkBoxInterests"> 
                                    <label class="checkbox-inline" for="{{remove_space}}">
                                    <input type="checkbox" name="Checkboxes" id="{{remove_space}}" value="{{interest}}">
                                        {{interest}}
                                    </label> 
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div>
                      <!-- Button trigger modal -->
                      <button type="button" class="btn btn-default center space" id="seeMoreBtn">
                        See More
                      </button>

                      <!-- Modal -->
                      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                              <h4 class="modal-title" id="myModalLabel">Interests</h4>
                            </div>
                            <div class="modal-body">
                              <div id="interest" class="row">
                                {{#each extra_interests}}
                                <div class="col-md-6 columns center" id="checkBoxInterestsModal"> 
                                        <label class="checkbox-inline" for="{{remove_space}}">
                                        <input type="checkbox" name="Checkboxes" id="{{remove_space}}" value="{{interest}}">
                                            {{interest}}
                                        </label> 
                                </div>
                                {{/each}}
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button id="saveChanges" type="button" class="btn btn-primary" data-dismiss="modal">Add to Interest</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <button id="submitBtn" class="btn btn-default center space">Create Profile</button>
            </div><!-- @end #content -->
          </div><!-- @end #w -->
    </div>

    <script>
      $('#seeMoreBtn').on('click', function() {
        var interestHtml = '{{#each extra_interests}}' +
                                '<div class="col-md-6 columns center" id="checkBoxInterestsModal">' + 
                                        '<label class="checkbox-inline" for="{{remove_space}}">' +
                                        '<input type="checkbox" name="Checkboxes" id="{{remove_space}}" value="{{interest}}">' +
                                            '{{interest}}' +
                                        '</label>' +
                                '</div>' +
                           '{{/each}}';
        $('#interest').append(interestHtml);
      });
    </script>
</body>
</html>
